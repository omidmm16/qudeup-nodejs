{
    "exclude": ["node_modules", "src/**/*.test.ts", "**/__mocks__/**", "tests"],
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "lib": ["es2020", "dom"],
      "strict": false,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "baseUrl": ".",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
    }
}